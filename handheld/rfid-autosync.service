[Unit]
Description=RFID Database Auto-Sync Service
After=network-online.target
Wants=network-online.target
Restart=always

[Service]
Type=simple
User=binslibal
Group=binslibal
WorkingDirectory=/Integrated-RFID-Reader/handheld
ExecStart=/usr/bin/python3 /Integrated-RFID-Reader/handheld/auto_sync_service.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment variables
Environment=PYTHONPATH=/Integrated-RFID-Reader/handheld

[Install]
WantedBy=multi-user.target